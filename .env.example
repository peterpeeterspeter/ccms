# CCMS Production Environment Configuration Template
# Copy this file to .env and fill in your actual API keys

# === CORE API KEYS (REQUIRED) ===
OPENAI_API_KEY="sk-proj-your-openai-api-key-here"     # Required: GPT-4o + embeddings
ANTHROPIC_API_KEY="sk-ant-api03-your-anthropic-key"   # Required: Claude models
TAVILY_API_KEY="tvly-dev-your-tavily-api-key-here"    # Required: Web research

# === SUPABASE CONFIGURATION (REQUIRED) ===
SUPABASE_URL="https://your-project-id.supabase.co"
SUPABASE_SERVICE_KEY="your-supabase-service-role-key-here"
SUPABASE_ANON_KEY="your-supabase-anon-key-here"  
SUPABASE_PROJECT_ID="your-project-id"

# === SECURITY CONFIGURATION ===
ENCRYPTION_KEY="generate-32-byte-base64-key"
SALT_VALUE="generate-32-byte-hex-salt"
JWT_SECRET="generate-jwt-secret-key"
API_SECRET="generate-api-secret-key"

# API Management
API_KEY_ROTATION_DAYS=90
API_KEY_LENGTH=32

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
BURST_LIMIT=100

# Session Management
SESSION_TIMEOUT_MINUTES=30
MAX_CONCURRENT_SESSIONS=5

# Password Policy
MIN_PASSWORD_LENGTH=12
PASSWORD_HISTORY_COUNT=5

# GDPR Compliance
DATA_RETENTION_DAYS=365
CONSENT_EXPIRY_DAYS=730

# Content Moderation
MODERATION_THRESHOLD=0.8

# Audit Settings
AUDIT_RETENTION_DAYS=2555
AUDIT_BATCH_SIZE=1000

# === WORDPRESS CONFIGURATION (REQUIRED) ===
WORDPRESS_SITE_URL="https://your-wordpress-site.com"
WORDPRESS_USERNAME="your-wp-username"
WORDPRESS_APP_PASSWORD="your wp app password"

# === EXTERNAL SERVICE APIS ===
# DataForSEO Image Search (Optional - research only)
DATAFORSEO_LOGIN="your-dataforseo-email"
DATAFORSEO_PASSWORD="your-dataforseo-password"

# Firecrawl Configuration (Required for screenshots)
FIRECRAWL_API_KEY="fc-your-firecrawl-api-key-here"

# === SYSTEM CONFIGURATION ===
USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"
TENANT_DEFAULT="crashcasino"

# LangSmith (Optional - for tracing)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT="ccms-production"
LANGCHAIN_API_KEY="your-langsmith-key-optional"

# Environment
ENVIRONMENT="production"
DEBUG=false

# === SETUP INSTRUCTIONS ===
# 1. Copy: cp .env.example .env
# 2. Fill in all API keys and configuration
# 3. Verify services are configured:
#    ✅ OpenAI: GPT-4o + text-embedding-3-large  
#    ✅ Supabase: PostgreSQL + pgvector + RLS
#    ✅ Firecrawl: V1 API for screenshot capture
#    ✅ WordPress: REST API + Application Password
#    ✅ Tavily: Real-time web research
#    ⚠️  DataForSEO: Optional image discovery
#    ⚠️  LangSmith: Optional observability

# === COMPONENT VERIFICATION ===
# Test system after setup:
# python scripts/discover_components.py
# python integrate_existing_components.py
# python test_ccms_pipeline.py